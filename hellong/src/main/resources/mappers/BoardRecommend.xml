<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oracle.hellong.BoardRecommendMapper">
	<!-- 해당 회원이 특정 게시글을 추천했는지 확인하는 쿼리 -->
    <select id="checkRecommendation" parameterType="map" resultType="int">
        SELECT COUNT(*) FROM board_recommend
        WHERE m_number = #{m_number}
        AND b_number = #{b_number}
    </select>
	
</mapper>